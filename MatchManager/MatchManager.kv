<ControlButtonsWidget>:
    BoxLayout:
        size: root.size
        spacing: 5
        orientation: 'horizontal'
        pos: root.pos
        Button:
            id: start_button
            text: 'Start'
            on_press: app._start_timer()
        Button:
            id: stop_button
            text: 'Stop'
            on_press: app._stop_timer()
        Button:
            id: reset_button
            text: 'Reset'
            on_press: app._reset_timer()
        Button:
            id: quit_button
            text: 'Quit'
            on_press: app.stop()

<TimerOutputWidget>
    BoxLayout:
        border: 50
        size: root.size
        pos: root.pos
        orientation: 'horizontal'
        Label:
            font_size: 48
            text: app._set_time(app._elapsedtime)

<GoalButtonWidget>:
    BoxLayout:
        padding: 50
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        Button:
            text: 'Goal'
            on_press: app.goal_popup()

<ManagerBoxUI>:
    BoxLayout:
        size: root.size
        pos: root.pos
        id: foo_bar
        orientation: 'vertical'
        ControlButtonsWidget:
            size_hint: 1, 0.2
        TimerOutputWidget:
            size_hint: 1, 0.5
        GoalButtonWidget:


<CPopup>:
    size: root.size
    title: root.title
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: "Ooh, something happened"
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'OK'
                on_release: root.dismiss()
            Button:
                text: 'Cancel'
                on_release: root.dismiss()




