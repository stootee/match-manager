MainScreenManager:
    ManagerBoxUI:
    SquadScreen:

<ControlButtonsWidget>:
    BoxLayout:
        size: root.size
        spacing: 5
        orientation: 'horizontal'
        pos: root.pos
        Button:
            text: 'Start'
            on_press: app.root._start_timer()
        Button:
            text: 'Stop'
            on_press: app.root._stop_timer()
        Button:
            text: 'Reset'
            on_press: app.root._reset_timer()
        Button:
            text: 'Quit'
            on_press: app.stop()

<TimerOutputWidget>
    BoxLayout:
        border: 50
        size: root.size
        pos: root.pos
        orientation: 'horizontal'
        Label:
            font_size: 48
            text: timestr #app._set_time(app._elapsedtime)

<GoalButtonWidget>:
    BoxLayout:
        padding: 50
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        Button:
            text: 'Goal'
            on_release: app.root.current = 'squad_screen'

<ManagerBoxUI>:
    name: 'manager_screen'
    BoxLayout:
        size: root.size
        pos: root.pos
        id: foo_bar
        orientation: 'vertical'
        ControlButtonsWidget:
            size_hint: 1, 0.2
        TimerOutputWidget:
            size_hint: 1, 0.5
        GoalButtonWidget:

<CPopup>:
    size: root.size
    title: root.title
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: "Ooh, something happened"
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'OK'
                on_release: root.dismiss()
            Button:
                text: 'Cancel'
                on_release: root.dismiss()

<SquadScreen>:
    name: 'squad_screen'
    BoxLayout:
        Button:
            text: 'My settings button'
        Button:
            text: 'Back to menu'
            on_press: app.root.current = 'manager_screen'