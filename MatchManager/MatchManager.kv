                    text: '5'
                    group: 'scorer'
                ToggleButton:
                    id: s_button6
                    name: 's_button6'
                    text: '6'
                    group: 'scorer'
                ToggleButton:
                    id: s_button7
                    name: 's_button7'
                    text: '7'
                    group: 'scorer'
                ToggleButton:
                    id: s_button8
                    name: 's_button8'
                    text: '8'
                    group: 'scorer'
                ToggleButton:
                    id: s_button9
                    name: 's_button9'
                    text: '9'
                    group: 'scorer'
                ToggleButton:
                    id: s_button10
                    name: 's_button10'
                    text: '10'
                    group: 'scorer'
                ToggleButton:
                    id: s_button11
                    name: 's_button11'
                    text: '11'
                    group: 'scorer'
                ToggleButton:
                    id: s_button12
                    name: 's_button12'
                    text: '12'
                    group: 'scorer'
                ToggleButton:
                    id: s_button13
